#!/usr/bin/env node

const path = require('path');
const epiiMinion = require('@epiijs/minion');
const firecell = require('../kernel/server');

const config = {
  name: 'firecell',
  help: path.join(__dirname, './help.txt'),
};

epiiMinion.startRunner(config, async ({ command, options }) => {
  const commands = command.split(/\s+/);
  for (let c of commands) {
    if (c === 'direct' || c === '-d') options.mode = 'direct';
    if (c === 'mirror' || c === '-m') options.mode = 'mirror';
  }
  firecell.startServer({
    mode: options.mode || 'mirror',
    port: options.port,
    path: options.path,
  });
});
